{{#if (eq type 'hasMany')}}
  {{description-display-relations values=value name=subName getTagName=getTagName getClassNames=getClassNames
  emptyRelations="emptyRelationMany"}}
{{else if (eq type 'hasOne')}}
  {{description-display-relation model=value name=subName tagName=getTagName classNames=getClassNames
  emptyRelationValue="emptyRelationOne"}}
{{else if (eq type 'component')}}
  {{component (await value) concept=concept model=model emptyComponent="emptyComponent" tagName=getTagName classNames=getClassNames}}
{{else if (await isArray)}}
  {{#each (await value) as |subvalue|}}
    {{description-display-value concept=concept value=subvalue tagName=getTagName classNames=getClassNames}}
  {{/each}}
{{else}}
  {{description-display-value concept=concept value=(await value) tagName=getTagName classNames=getClassNames}}
{{/if}}
