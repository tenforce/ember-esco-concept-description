{{#if (eq type 'hasMany')}}
  {{#each (await value) as |subvalue|}}
    {{#unless (eq subValue.hide true)}}
      {{description-display-relation model=subvalue name=subName tagName=getTagName classNames=getClassNames emptyRelationMany="emptyRelationValue"}}
    {{/unless}}
  {{/each}}
{{else if (eq type 'hasOne')}}
  {{#unless (eq value.hide true)}}
    {{description-display-relation model=value name=subName tagName=getTagName classNames=getClassNames emptyRelationOne="emptyRelationValue"}}
  {{/unless}}
{{else if (eq type 'component')}}
  {{component (await value) concept=concept model=model tagName=getTagName classNames=getClassNames}}
{{else if (await isArray)}}
  {{#each (await value) as |subvalue|}}
    {{description-display-value concept=concept value=subvalue tagName=getTagName classNames=getClassNames}}
  {{/each}}
{{else}}
  {{description-display-value concept=concept value=(await value) tagName=getTagName classNames=getClassNames}}
{{/if}}
